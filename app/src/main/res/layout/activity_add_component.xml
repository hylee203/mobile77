<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:id="@+id/add_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="--  setting  --"
        android:textSize="25dp"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textStyle="bold"
        android:fontFamily="sans-serif"/>

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/add_text"
        android:layout_marginBottom="-60dp"
        android:layout_marginLeft="20dp"
        android:text="TITLE"
        android:textSize="35dp"
        android:background="@drawable/title_background"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textStyle="italic|bold"
        android:fontFamily="sans-serif"/>

    <EditText
        android:id="@+id/edit_text"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/title_text"
        android:layout_marginBottom="-60dp"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:hint=" 제목을 입력하세요"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:inputType="text"
        android:textStyle="bold"
        android:fontFamily="sans-serif"/>

    <TextView
        android:id="@+id/component_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edit_text"
        android:layout_marginBottom="-80dp"
        android:layout_marginLeft="20dp"
        android:text="COMPONENT"
        android:textSize="35dp"
        android:background="@drawable/title_background"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textStyle="italic|bold"
        android:fontFamily="sans-serif"/>

    <Spinner
        android:id="@+id/component_select_spinner"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/component_text"
        android:layout_marginBottom="-50dp"
        android:layout_centerHorizontal="true"
        android:textSize="35dp"/>

    <TextView
        android:id="@+id/type_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/component_select_spinner"
        android:layout_marginBottom="-80dp"
        android:layout_marginLeft="20dp"
        android:text="TYPE"
        android:textSize="35dp"
        android:background="@drawable/title_background"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textStyle="italic|bold"
        android:fontFamily="sans-serif"/>

    <RadioGroup
        android:id="@+id/type_select_button"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/type_text"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-100dp">

        <RadioButton
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TIMER"
            android:textSize="23dp"
            android:layout_marginEnd="10dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"/>

        <RadioButton
            android:id="@+id/stopwatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STOPWATCH"
            android:textSize="23dp"
            android:layout_marginEnd="10dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"/>

    </RadioGroup>

    <TextView
        android:id="@+id/color_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/type_select_button"
        android:layout_marginBottom="-80dp"
        android:layout_marginLeft="20dp"
        android:text="COLOR"
        android:textSize="35dp"
        android:background="@drawable/title_background"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textStyle="italic|bold"
        android:fontFamily="sans-serif"/>

    <Spinner
        android:id="@+id/color_select_spinner"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/color_text"
        android:layout_marginBottom="-50dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/accept_button"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="Save"
        android:textSize="30dp"
        android:layout_alignBottom="@+id/color_select_spinner"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-80dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="sans-serif"/>

</RelativeLayout>
